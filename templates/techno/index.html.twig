{% extends 'base.html.twig' %}

{% block title%}Hello TechnoController
{% endblock %}

{% block content %}
<section class="container">
	<div>
		<a href="{{path('techno_add')}}">Ajouter des technos</a>
	</div>
	<div>
		<h2>Liste des technos :</h2>
		<table>
			<tr>
				<th>Nom</th>
				<th>Action</th>
			</tr>
            {% for techno in technos %}
                <tr>
                    <td>{{ techno.name }}</td>   
					<td><img src="{{ asset("/uploads/logo/" ~ techno.logo) }}" alt="" width="5%"></td>
                    <td><a href="{{ path('techno_edit', {id:techno.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('techno_delete', {id:techno.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
		</table>
	</div>
</section>
{% endblock %}