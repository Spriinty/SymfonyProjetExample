{% extends 'base.html.twig' %}

{% block content %}

	<section class="container-fluid">
		<div class="container">
			<h1>Ã‰dition d'une techno</h1>

			<div>
				{{ form_start( form, {attr:{novalidate:'novalidate'}}) }}
				<div>
					{{ form_label(form.name,'Nom de la techno ') }}
					{{ form_widget(form.name) }}
				</div>
				<div>
				<img src="{{ asset("/uploads/logo/" ~ form.vars.data.logo) }}" alt="" width="10%">
				</div>
				<div>
					{{ form_errors(form.logo)}}
					{{ form_label(form.logo,'Upload une image') }}
					{{ form_widget(form.logo) }}
				</div>

				<div>
					{{ form_widget(form.ajouter, { 'label': 'Modifier' }, {'attr':{'class': 'btn btn-primary'}}) }}
				</div>
				{{ form_end( form, {'render_rest' : false} ) }}
			</div>
		</div>
	</section>


{% endblock %}
