{% extends 'base.html.twig' %}

{% block content %}

	<section class="container-fluid">
		<div class="container">

			<h1>Ajout de Technos :</h1>

			<div>
				{{ form_start( form, {attr:{novalidate:'novalidate'}}) }}
				<div>
					{{ form_errors(form)}}
				</div>
				<div>
					{{ form_errors(form.name)}}
					{{ form_label(form.name,'Nom de la techno ') }}
					{{ form_widget(form.name) }}
				</div>

				<div>
					{{ form_errors(form.logo)}}
					{{ form_label(form.logo,'Upload une image') }}
					{{ form_widget(form.logo) }}
				</div>

				<div>
					{{ form_widget(form._token) }}
					{{ form_widget(form.ajouter, { 'label': 'Ajouter' }, {'attr':{'class': 'btn btn-primary'}}) }}
				</div>

				{{ form_end( form, {'render_rest' : false} ) }}

			</div>
		</div>
	</section>

{% endblock %}
